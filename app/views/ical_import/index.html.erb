<% @ical_settings.each do |setting| %>
  <div class="autoscroll">
  <p class="buttons hide-when-print">
    <%= link_to_user(setting.user) %> ( <%= setting.name %> )
    <%= link_to l(:button_update), {:controller => "ical_import", :action => "update", :id => setting}, :class => 'icon icon-edit' %>
  </p>
  <table class="list issues">
    <tbody>
      <tr>
        <th><%= l(:field_issue) %></th>
        <th><%= l(:field_start_date) %></th>
        <th><%= l(:field_due_date) %></th>
        <th><%= l(:field_created_on) %></th>
        <th><%= l(:field_updated_on) %></th>
      </tr>
      <% setting.ical_uid_relations.sort_by{|rel| rel.issue.start_date}.each do |rel| %>
        <% issue = rel.issue %>
        <tr>
          <td><%= link_to_issue(issue) %></td>
          <%= event_date(rel, issue) %>
          <td style="text-align: right;"><%= distance_of_time_in_words(Time.now, issue.created_on) %>前</td>
          <td style="text-align: right;"><%= distance_of_time_in_words(Time.now, issue.updated_on) %>前</td>
        </tr>
      <% end %>
      </tbody>
  </table>
  </div>
<% end  %>

